{
  "ReverseProxy": {
    "Routes": {
      "order": {
        "ClusterId": "orderservice",
        "Match": { "Path": "/orders/{**catch-all}" }
      },
      "product": {
        "ClusterId": "productservice",
        "Match": { "Path": "/products/{**catch-all}" }
      }
    },
    "Clusters": {
      "orderservice": {
        "Destinations": {
          "order": { "Address": "http://orderservice:80" }
        }
      },
      "productservice": {
        "Destinations": {
          "product": { "Address": "http://productservice:80" }
        }
      }
    }
  }
}